---
layout: page
permalink: /index.html
---


{% if feeds.conferences.length > 0 %}

    <style>
    {%- for city in feeds.cities -%}

        .conferences:has(.city.city-{{ city.slug }}:hover) .conf-row.city-{{ city.slug }}>td {
            color: white;
            background: #494949;
        }
        .conferences:has(.conf-row.city-{{ city.slug }}:hover) .city.city-{{ city.slug }} {
            outline-offset: 10px;
        }

    {%- endfor -%}
    </style>

    <h2>conferenties</h2>

<section class="conferences">
    <table class="conf-table">
        {%- for conference in feeds.conferences -%}
        <tr class="conf-row city-{{ conference.slug }}">
            <td><a class="conf-link" href="{{ conference.url }}">{{ conference.start_date | dateRange: conference.end_date }}</a></td>
            <td>{{ conference.city }}</td>
            <td>{{ conference.title }}</td>
        </tr>
        {%- endfor -%}
    </table>
    <div class="map">

        {%- for city in feeds.cities -%}
            <div class="city city-{{ city.slug }}" style="--lat: {{ city.latitude }}; --lon: {{ city.longitude }};"></div>

        {%- endfor -%}
        <img src="/assets/nl-vl.svg" alt="Kaart van Nederland en Vlaanderen"/>
    </div>
</section>
{% endif %}

{% if feeds.posts.length > 0 %}
<h2>blogs en nieuws</h2>

<ul class="box item-box">
{%- for post in feeds.posts -%}
        <li class="item" lang="{{ post.language | default: 'en' }}">
                <a class="link item-link" href="{{ post.link }}">
                        <h4 class="item-feed-title">{{ post.feedTitle }} <span class="item-feed-date">• <time itemprop="datePublished" datetime="{{ post.dateValue | ymdDate }}">{{ post.dateValue | dutchShortDate }}</time></span></h4>
                        <h3 class="item-title">{{ post.title }}</h3>
                </a>
        </li>
{%- endfor -%}
</ul>
{% endif %}

{% if feeds.videos.length > 0 %}
<h2>video’s</h2>

<ul class="box video-box">
        {%- for video in feeds.videos -%}
                <li class="video">
                        <a class="link video-link" href="{{ video.link }}">
                                <img class="video-thumbnail" src="{{ video.thumbnail.url }}" alt="">
                                <h4 class="item-feed-title">{{ video.author }} <span class="item-feed-date">• <time itemprop="datePublished" datetime="{{ video.dateValue | ymdDate }}">{{ video.dateValue | dutchShortDate }}</time></span></h4>
                                <h3 class="video-title">{{ video.title }}</h3>
                        </a>
                </li>
        {%- endfor -%}
</ul>
{% endif %}


{% if feeds.podcasts.items.length > 0 %}
    <h2>podcasts</h2>

    <ul class="box video-box">
        {%- for podcast in feeds.podcasts.items -%}
            <li class="video">
                <a class="link video-link" href="{{ podcast.link }}">
                    <img class="podcast-thumbnail" src="{{ podcast.image | default: podcast.feedImage }}" alt="">
                    <h4 class="item-feed-title">{{ podcast.creator }} • {{ podcast.duration | duration }} • <span class="item-feed-date"><time itemprop="datePublished" datetime="{{ podcast.dateValue | ymdDate }}">{{ podcast.dateValue | dutchShortDate }}</time></span></h4>
                    <h3 class="video-title">{{ podcast.title }}</h3>
                </a>
            </li>
        {%- endfor -%}
    </ul>
{% endif %}

<p class="small"><a href="https://podcastindex.org/" rel="nofollow">Podcast Index</a> is used to gather podcast data</p>

<p class="small">Laatst bijgwerkt: {{ feeds.lastUpdated | dutchLongDate }}</p>